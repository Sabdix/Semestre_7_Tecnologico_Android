<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#e6e6e6"
    android:gravity="center"
>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Fragmento 1"
        android:textColor="#000"
        android:textStyle="bold"
    />
    <EditText
        android:id="@+id/etFragmento1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Mensaje para Fragmento 1.1"
    />
    <Button
        android:id="@+id/btFragmento1"
        android:text="Comunicar F1.1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
    />
    <fragment
        android:id="@+id/fragmento1_1"
        android:name="com.Fragments.Fragmento1_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    />
</LinearLayout>

