<?xml version="1.0" encoding="UTF-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
    >
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
        >
            <ImageView
                android:id="@+id/iv_foto"
                android:src="@drawable/ic_launcher"
                android:layout_height="100dp"
                android:layout_width="100dp"
            />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
            >
                <EditText
                    android:id="@+id/et_nombreContactos"
                    android:hint="Nombre"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                />
                <EditText
                    android:id="@+id/et_apellidoContactos"
                    android:hint="Apellido"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                />
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ccc" 
        />
        <TextView
            android:text="Teléfono"
            android:textSize="18dp"
            android:fontFamily="Verdana"
            android:textColor="#fff"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
        />
        <EditText
            android:id="@+id/et_telefonoContactos"
            android:hint="Número de teléfono"
            android:inputType="number"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
        />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ccc" 
        />
        <TextView
            android:text="Correo"
            android:textSize="18dp"
            android:fontFamily="Verdana"
            android:textColor="#fff"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
        />
        <EditText
            android:id="@+id/et_correoContactos"
            android:hint="Dirección de correo"
            android:inputType="textEmailAddress"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
        />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ccc" 
        />
        <TextView
            android:text="Teléfono 2"
            android:textSize="18dp"
            android:fontFamily="Verdana"
            android:textColor="#fff"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
        />
        <EditText
            android:id="@+id/et_telefono_2"
            android:hint="Número de teléfono 2"
            android:inputType="number"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
        />
        <LinearLayout
            android:orientation="horizontal"
            android:background="#ccc"
            android:gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
        >
            <Button
                android:text="Guardar"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:onClick="eventoAgregaContacto"
            />
            <Button
                android:text="Cancelar"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:onClick="eventoCancela"
            />
        </LinearLayout>
    </LinearLayout>
</ScrollView>