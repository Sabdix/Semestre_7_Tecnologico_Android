<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
>
    <EditText
        android:id="@+id/valor"
        android:textSize="35sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:ellipsize="end"
        android:ems="10"
        android:maxLength="15"
        android:enabled="false"
        android:textColor="#fff"
        android:background="#000"
        android:gravity="right"
    />
     <LinearLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    >
        <Button
        android:id="@+id/ac"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        
        
        android:layout_marginLeft="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="1dp"
        
        android:text="AC"
        android:textColor="#fff"
        android:textSize="25sp"
        android:background="#191D1C"
        />
        <Button
        android:id="@+id/jButton2"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        
        android:layout_marginLeft="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="1dp"
        
        android:text="BORRAR"
        android:textColor="#fff"
        android:textSize="25sp"
        android:background="#191D1C"
        />
     </LinearLayout>
    <LinearLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    >
        <Button
        android:id="@+id/siete"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        
        android:layout_marginLeft="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="1dp"
        
        android:text="7"
        android:textColor="#fff"
        android:textSize="65sp"
        android:background="#505050"
    />

    <Button
        android:id="@+id/ocho"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        
        android:layout_marginLeft="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="1dp"
        
        android:text="8"
        android:textColor="#fff"
        android:textSize="65sp"
        android:background="#505050"
    />
    
     <Button
        android:id="@+id/nueve"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        
        android:layout_marginLeft="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="1dp"
        
        android:text="9"
        android:textColor="#fff"
        android:textSize="65sp"
        android:background="#505050"
        />
     
     <Button
        android:id="@+id/dividir"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        
        android:layout_marginLeft="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="1dp"
        
        android:text="/"
        android:textColor="#fff"
        android:textSize="65sp"
        android:background="#191D1C"
        />
    </LinearLayout>
    
     <LinearLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    >
     <Button
        android:id="@+id/cuatro"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        
        android:layout_marginLeft="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="1dp"
        
        android:text="4"
        android:textColor="#fff"
        android:textSize="65sp"
        android:background="#505050"
    />
     
     <Button
        android:id="@+id/cinco"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        
        android:layout_marginLeft="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="1dp"
        
        android:text="5" 
        android:textColor="#fff"
        android:textSize="65sp"
        android:background="#505050"
         />

    <Button
        android:id="@+id/seis"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        
         android:layout_marginLeft="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="1dp"
        
        android:text="6"
        android:textColor="#fff"
        android:textSize="65sp"
        android:background="#505050"
    />
    
    <Button
        android:id="@+id/multi"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        
        android:layout_marginLeft="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="1dp"
        
        android:text="X"
        android:textColor="#fff"
        android:textSize="65sp"
        android:background="#191D1C"
        /> 
         
     </LinearLayout>
   <LinearLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
   >
       <Button
        android:id="@+id/unoo"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        
        android:layout_marginLeft="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="1dp"
        
        android:text="1"
        android:textColor="#fff"
        android:textSize="65sp"
        android:background="#505050"
        />
       
       <Button
        android:id="@+id/doss"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        
        android:layout_marginLeft="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="1dp"
        
        android:text="2"
        android:textColor="#fff"
        android:textSize="65sp"
        android:background="#505050"
        />
       
        <Button
        android:id="@+id/tres"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        
        android:layout_marginLeft="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="1dp"
        
        android:text="3"
        android:textColor="#fff"
        android:textSize="65sp"
        android:background="#505050"
        />
        
        <Button
        android:id="@+id/menos"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        
        android:layout_marginLeft="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="1dp"
        
        android:text="-"
        android:textColor="#fff"
        android:textSize="65sp"
        android:background="#191D1C"
        /> 
   </LinearLayout>

    <LinearLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
   >
       <Button
        android:id="@+id/punto"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        
        android:layout_marginLeft="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="1dp"
        
        android:text="."
        android:textColor="#fff"
        android:textSize="65sp"
        android:background="#505050"
        />
       
       <Button
        android:id="@+id/ceros"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        
        android:layout_marginLeft="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="1dp"
        
        android:text="0"
        android:textColor="#fff"
        android:textSize="65sp"
        android:background="#505050"
        />
       
        <Button
        android:id="@+id/igual"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        
        android:layout_marginLeft="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="1dp"
        
        android:text="="
        android:textColor="#fff"
        android:textSize="65sp"
        android:background="#505050"
        />
        
        <Button
        android:id="@+id/mas"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        
        android:layout_marginLeft="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="1dp"
        
        android:text="+"
        android:textColor="#fff"
        android:textSize="65sp"
        android:background="#191D1C"
        /> 
   </LinearLayout>
   <LinearLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
   >
       <Button
        android:id="@+id/sen"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        
        android:layout_marginLeft="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="1dp"
        
        android:text="sin"
        android:textColor="#fff"
        android:textSize="15sp"
        android:background="#191D1C"
        />
       
       <Button
        android:id="@+id/cos"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        
        android:layout_marginLeft="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="1dp"
        
        android:text="cos"
        android:textColor="#fff"
        android:textSize="15sp"
        android:background="#191D1C"
        />
       <Button
        android:id="@+id/tan"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        
        android:layout_marginLeft="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="1dp"
        
        android:text="tan"
        android:textColor="#fff"
        android:textSize="15sp"
        android:background="#191D1C"
        />
       <Button
        android:id="@+id/potencia"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        
        android:layout_marginLeft="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="1dp"
        
        android:text="x^"
        android:textColor="#fff"
        android:textSize="15sp"
        android:background="#191D1C"
        />
       
       
   </LinearLayout>
       
    <TextView
        android:id="@+id/t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible" 
    />
</LinearLayout>