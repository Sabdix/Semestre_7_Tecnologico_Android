<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.appminimi"
      android:versionCode="1"
      android:versionName="1.0">
    
    <uses-sdk android:minSdkVersion="17"
    		  android:maxSdkVersion="17"/>
    <supports-screens android:smallScreens="true"
					  android:normalScreens="true"
					  android:largeScreens="true" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <application android:label="@string/app_name" android:icon="@drawable/ic_launcher">
        <activity android:name="AppMiniMi"
            android:screenOrientation="portrait"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="InicioApps" android:screenOrientation="portrait"
            android:label="Aplicaciones" android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen"/>
        
        <activity android:name="AppBuscador" android:screenOrientation="portrait"
            android:label="Buscador de Archivos" />
        <activity android:name="AppReproductor" android:screenOrientation="portrait"
            android:label="MP3 Player" />
        <activity android:name="AppContactos" android:screenOrientation="portrait"
            android:label="Contactos" />
        <activity android:name="AgregarContacto" android:screenOrientation="portrait"
            android:label="AgregarContacto" />
        <activity android:name="EditarContacto" android:screenOrientation="portrait"
            android:label="Modificar Contacto" />
        <activity android:name="AppNotepad" android:screenOrientation="portrait"
            android:label="Notas" />
        <activity android:name="Abrir_guardar" android:screenOrientation="portrait"
            android:label="Notas" />
        <activity android:name="AppCalendario" android:screenOrientation="portrait"
            android:label="Calendario" />
        <activity android:name="Blackjack" android:screenOrientation="portrait"
            android:label="Blackjack" />
        <activity
            android:name="Help"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity android:name="SetBackground" android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen"/>
        <activity android:name="CambiarFondo" android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" android:screenOrientation="portrait"/>
        
        <activity 
            android:name="NoteEdit" android:label="Notepad" android:screenOrientation="portrait"/>
            <activity 
            android:name="NoteList" android:label="Notepad" android:screenOrientation="portrait"/> 
  
        <activity android:name="PreferencesActivity" />
        <activity android:name="AppNavegador" android:screenOrientation="portrait"
            android:label="Navegador" />
        <activity android:name="AppExplorador" android:screenOrientation="portrait"
            android:label="Explorador" >
             <intent-filter>
            	<action android:name="android.intent.action.GET_CONTENT" />
            	<data android:mimeType="*/*" />
            	<category android:name="android.intent.category.OPENABLE" />
            	<category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name="AppCalculadora" android:screenOrientation="portrait"
            android:label="Calculadora" />
        
        <activity android:name="Settings" android:label="@string/app_name" />		 
    	<activity android:name="ProcessManager" android:label="@string/manager_act" />
	    <activity android:name="WirelessManager" android:label="Wireless Information" />
	    <activity android:name="ApplicationBackup" android:label="Installed Applications" />
	    
	    <activity android:name="AudioPlayblack"
	    		  android:label="@string/media_dialog"
	    		  android:theme="@android:style/Theme.Dialog" />
	    
	    <activity android:name="DirectoryInfo" android:enabled="true"
	    		  android:label="@string/dir_info">
	    	<intent-filter>
	    		<action android:name="android.intent.action.VIEW" />
	    		<data android:mimeType="application/manager" />
	    		<category android:name="android.intent.category.DEFAULT" />
	    	</intent-filter>
	    </activity>
	    
	    <activity android:name="HelpManager"
	    		  android:label="About Open Manager"
	    		  android:theme="@android:style/Theme.Dialog" />
            
    </application>
</manifest>
