<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
>
    <LinearLayout 
    android:orientation="vertical"
    android:layout_width="140dp"
    android:layout_height="fill_parent"
    android:background="#e6e6e6"
    android:gravity="center"
    >
    
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:text="Mensaje"
        />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etActivity"
        />
        <Button
            android:text="Enviar a F1"
            android:id="@+id/btEnviarF1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="eventoPasar_Activity"
        />
    </LinearLayout>

    <fragment
        android:id="@+id/fragmento1"
        android:name="com.practica3.fragmentos.Fragmento1"
        android:layout_width="150dp"
        android:layout_height="fill_parent"
    />

    <fragment
        android:id="@+id/fragmento2"
        android:name="com.practica3.fragmentos.Fragmento2"
        android:layout_width="150dp"
        android:layout_height="fill_parent"
    />

    <fragment
        android:id="@+id/fragmento3"
        android:name="com.practica3.fragmentos.Fragmento3"
        android:layout_width="150dp"
        android:layout_height="fill_parent"
    />
</LinearLayout>
