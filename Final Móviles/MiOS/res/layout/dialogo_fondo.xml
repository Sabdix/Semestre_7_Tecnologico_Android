<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#61380B"
    android:id="@+id/linearNotas"
    android:gravity="center"
>
    <ImageView
        android:src="@drawable/bloqueo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/bloqueo"
    />
    <ImageView
        android:src="@drawable/fondo_space"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/fondo_space"
    />
    <ImageView
        android:src="@drawable/fondo_space2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/fondo_space2"
    />
    <ImageView
        android:src="@drawable/fondo_space_3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/fondo_space3"
    />
    <Button
        android:id="@+id/btFondoAceptar"
        android:text="Aceptar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
    />
</LinearLayout>