<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bloqueo"
    android:gravity="center"
>
    <LinearLayout 
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#33888888"
        android:gravity="center"
    >
        <TextView
            android:id="@+id/tvHora"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:text="Hora"
            android:gravity="center"
        />
    </LinearLayout>
    <LinearLayout 
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:background="#33888888"
        android:gravity="center"
    >
        <LinearLayout 
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
        >
            <ImageView
                android:src="@drawable/avatar3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:onClick="eventoAvatar1"
            />
            <TextView
                android:id="@+id/tvLink"
                android:text="Sabdi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:textStyle="bold"
            />
        </LinearLayout>
        <LinearLayout 
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
        >
            <ImageView
                android:src="@drawable/avatar2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:onClick="eventoAvatar2"
            />
            <TextView
                android:id="@+id/tvInvitado"
                android:text="Invitado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:textStyle="bold"
            />
        </LinearLayout>
    </LinearLayout>
    <EditText
        android:id="@+id/etPin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingresa tu pin"
        android:textColorHint="#fff"
        android:inputType="numberPassword"
        android:gravity="center"
        android:background="#99ffffff"
    />
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*"
        android:shrinkColumns="*" 
        android:background="#33888888"
    >
        <TableRow
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
        >
            <Button
                android:id="@+id/bt1"
                android:text="1"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="30dp"
                android:background="#33eeeeee"
                android:onClick="eventoNumeros"
            />
            <Button
                android:id="@+id/bt2"
                android:text="2"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="30dp"
                android:background="#33eeeeee"
                android:onClick="eventoNumeros"
            />
            <Button
                android:id="@+id/bt3"
                android:text="3"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="30dp"
                android:background="#33eeeeee"
                android:onClick="eventoNumeros"
            />
        </TableRow>
        <TableRow
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
        >
            <Button
                android:id="@+id/bt4"
                android:text="4"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="30dp"
                android:background="#33eeeeee"
                android:onClick="eventoNumeros"
            />
            <Button
                android:id="@+id/bt5"
                android:text="5"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="30dp"
                android:background="#33eeeeee"
                android:onClick="eventoNumeros"
            />
            <Button
                android:id="@+id/bt6"
                android:text="6"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="30dp"
                android:background="#33eeeeee"
                android:onClick="eventoNumeros"
            />
        </TableRow>
        <TableRow
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
        >
            <Button
                android:id="@+id/bt7"
                android:text="7"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="30dp"
                android:background="#33eeeeee"
                android:onClick="eventoNumeros"
            />
            <Button
                android:id="@+id/bt8"
                android:text="8"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="30dp"
                android:background="#33eeeeee"
                android:onClick="eventoNumeros"
            />
            <Button
                android:id="@+id/bt9"
                android:text="9"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="30dp"
                android:background="#33eeeeee"
                android:onClick="eventoNumeros"
            />
        </TableRow>
        <TableRow
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
        >
            <Button
                android:id="@+id/bt0"
                android:text="0"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="30dp"
                android:background="#33eeeeee"
                android:onClick="eventoNumeros"
            />
            <Button
                android:id="@+id/btOk"
                android:text="OK"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="30dp"
                android:background="#33eeeeee"
                android:onClick="eventoOk"
            />
            <Button
                android:id="@+id/btBorrar"
                android:text="C"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="30dp"
                android:background="#33eeeeee"
                android:onClick="eventoBorrar"
            />
        </TableRow>
    </TableLayout>
    <LinearLayout 
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#33888888"
        android:gravity="center"
    >
        <TextView
            android:id="@+id/tvFecha"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:text="Fecha"
            android:gravity="center"
        />
    </LinearLayout>
</LinearLayout>