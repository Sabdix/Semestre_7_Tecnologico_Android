<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="400dp"
    android:gravity="center"
    android:background="#e6e6e6"
>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
    >
        <TextView
            android:text="Fecha: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#f00"
        />
        <TextView
            android:id="@+id/tvDialogoFechaEvento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textStyle="bold"
        />
    </LinearLayout>
    <View
        android:layout_width="25dp"
        android:layout_height="25dp"
    />
    <TextView
        android:text="Titulo:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#00f"
    />
    <EditText
        android:id="@+id/etDialogoTituloEvento"
        android:hint="Ingresa titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    />
    <View
        android:layout_width="25dp"
        android:layout_height="25dp"
    />
    <TextView
        android:text="Descripción:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000"
    />
    <EditText
        android:id="@+id/etDialogoDescripcionEvento"
        android:hint="Ingresa la descripción"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="start"
    />
    <View
        android:layout_width="25dp"
        android:layout_height="25dp"
    />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
    >
        <Button
            android:id="@+id/btDialogoGuardarEvento"
            android:text="  Guardar  "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:background="#f00"
            android:textStyle="bold"
            android:textSize="18sp"
        />
        <View
            android:layout_width="25dp"
            android:layout_height="25dp"
        />
        <Button
            android:id="@+id/btDialogoCancelarEvento"
            android:text="  Cancelar  "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:background="#00f"
            android:textStyle="bold"
            android:textSize="18sp"
        />
    </LinearLayout>
</LinearLayout>