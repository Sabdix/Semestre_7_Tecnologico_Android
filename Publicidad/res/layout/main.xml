<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/llPrincipal"
>
    <fragment
            android:id="@+id/fragmento1"
            android:name="com.publicidad.fragmentos.Publicidad1"
            android:layout_width="150dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
    />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="200dp"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:id="@+id/llSecundario"
    >
        <fragment
            android:id="@+id/fragmento2"
            android:name="com.publicidad.fragmentos.Publicidad2"
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
        />
        <Button
            android:text="Intercambiar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="evtIntercambiar"
        />
        <fragment
            android:id="@+id/fragmento3"
            android:name="com.publicidad.fragmentos.Publicidad3"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:layout_height="100dp"
        />
    </LinearLayout>
    <fragment
        android:id="@+id/fragmento4"
        android:name="com.publicidad.fragmentos.Publicidad4"
        android:layout_weight="1"
        android:layout_width="150dp"
        android:layout_height="fill_parent"
    />
</LinearLayout>

